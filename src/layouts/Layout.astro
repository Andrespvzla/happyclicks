---
import Header from '../components/Header.astro';

interface Props {
    title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="description" content="Astro description" />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/ico" href="/favicon_io/favicon-32x32.png" />
        <meta name="generator" content={Astro.generator} />
        <title>{title}</title>
    </head>
    <body>
        <Header />
        <slot />
    </body><style is:global>
        @import url('https://fonts.googleapis.com/css2?family=Urbanist:ital,wght@0,100..900;1,100..900&display=swap');

        html {
            font-family: 'Urbanist', sans-serif;
            font-optical-sizing: auto;
            font-weight: <weight>;
            ont-style: normal;
            scroll-behavior: smooth;
        }

        body {
            display: flex;
            flex-direction: column;
            justify-content: center;
        }
    </style>
    <script>
        const boton = document.querySelector('#boton') as HTMLButtonElement;
        const nav = document.querySelector('#navbar-default') as HTMLDivElement;

        // const links = document.querySelectorAll('#navbar-default > ul > li > a');

        const botonAbout = document.querySelector('#botonAbout') as HTMLButtonElement;
        const botonPrices = document.querySelector('#botonPrices') as HTMLButtonElement;
        const botonContact = document.querySelector('#botonContact') as HTMLButtonElement;

        if (boton) {
            boton.addEventListener('click', (e) => {
                e.preventDefault();
                nav.classList.toggle('hidden');
            });
        }

        botonAbout.addEventListener('click', (e) => {
            nav.classList.add('hidden');
        });

        botonPrices.addEventListener('click', (e) => {
            nav.classList.add('hidden');
        });

        botonContact.addEventListener('click', (e) => {
            nav.classList.add('hidden');
        });
    </script>
</html>
